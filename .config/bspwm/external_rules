#!/bin/bash

id="${1?}";
instance="$3";
class="$2";

spotify() { echo "desktop=^10 follow=off focus=off"; }

orgscratchpad() { echo "sticky=on state=floating hidden=on center=true rectangle=1200x800+0+0";}

surf() { echo "state=tiled";}


# {{{
# Identify window process id
unset -v _NET_WM_PID;
  . /dev/fd/0 2>/dev/null <<IN
  : \"\${$(
    xprop \
      -id "$id" \
      -notype \
      -f _NET_WM_PID 32c '=$0' \
      _NET_WM_PID;
  )}\";
IN
# }}}

# For debugging
# echo "$class [$_NET_WM_PID]" >> $HOME/testfile;

# Display rules
case "$class" in
  spotify) spotify ;;
  Surf) surf ;;
  orgscratchpad) orgscratchpad ;;
  "")
    pid="$_NET_WM_PID";
    win=$(ps -o "comm=" -p "$pid");

    case "$win" in
      spotify) spotify ;;
    esac;;
esac;

