
[global/wm]
  margin-top = 5
  margin-bottom = 0

[settings]
  screenchange-reload = true
  pseudo-transparency = true


[colors]
  background = #000f1215
  background-alt = #0f1215

  foreground = #ffffff
  foreground-alt = ${xrdb:foreground:#eeeeee}
  foreground-faded = #888888

  blue = ${xrdb:color4}
  green = ${xrdb:color2}
  red = ${xrdb:color9}
  yellow = ${xrdb:color11}
  violet = #6c71c4

  highlight = ${colors.green}
  danger = ${colors.red}
  success = ${colors.green}
  warning = ${colors.yellow}

  volume = ${colors.violet}
  music = ${colors.blue}
  date = ${colors.red}
  bat_full = ${colors.green}
  bat_charging = ${colors.blue}
  bat_discharging = ${colors.yellow}


[bar/primary]
  modules-left = bspwm window_title
  modules-center =
  modules-right = volume music date battery

  ;monitor = ${env:MONITOR:HDMI-1}
  width = 100%
  height = 20
  offset-x = 0%
  offset-y = 0%
  radius = 0.0
  fixed-center = false
  bottom = true

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-size = 1
  line-color = #f00

  border-size = 0
  padding-left = 0
  padding-right = 2
  module-margin-left = 1
  module-margin-right = 2

  font-0 = Fira Code:size=10;1
  font-1 = FontAwesome:size=8.5;0
  font-2 = Symbols Nerd Font:size=10;1
  font-3 = unifont:size=6;-3
  font-4 = MaterialIcons:size=10;-1

  tray-position = right
  tray-padding = 2

  cursor-click = pointer




[module/window_title]
  type = internal/xwindow
  format = "  <label>"
  format-foreground = ${colors.foreground-faded}



[module/bspwm]
  type = internal/bspwm

  pin-workspaces = true
  inline-mode = false
  enable-click = true
  enable-scroll = false
  reverse-scroll = false
  fuzzy-match = true

  label-empty =
  label-dimmed = " %name% "
  label-occupied = " %name% "
  label-focused = " %name% "
  label-urgent = " %name% "

  label-focused-underline = ${colors.highlight}
  label-urgent-underline = ${colors.danger}




[module/volume]
  type = custom/script
  interval = 0.1
  exec = echo " $(~/scripts/dzen2bar/menuitems.sh volume_icon) $(~/scripts/dzen2bar/menuitems.sh volume) "
  click-left = ~/scripts/sound.sh mute
  format-underline = ${colors.volume}
  format-foreground = ${colors.foreground}



[module/music]
  type = custom/script
  interval = 0.1
  exec = echo "$(~/scripts/dzen2bar/menuitems.sh spotify_song_icon) $(~/scripts/dzen2bar/menuitems.sh spotify_song)"
  click-left = ~/scripts/spotify.sh play_pause
  format-underline = ${colors.music}
  format-foreground = ${colors.foreground}



[module/date]
  type = internal/date
  interval = 5

  date = "%d %h, %Y"
  time = "%l:%M %p"

  format-prefix = "   "
  format-prefix-foreground = ${colors.foreground}
  format = "<label> "
  format-underline = ${colors.date}
  format-foreground = ${colors.foreground}

  label = "%date% | %time%"



[module/battery]
  type = internal/battery
  battery = BAT0
  adapter = AC
  full-at = 99

  animation-charging-0 = " "
  animation-charging-1 = " "
  animation-charging-2 = " "
  format-charging = "<animation-charging> <label-charging> "
  format-charging-underline = ${colors.bat_charging}
  animation-charging-framerate = 750


  ramp-capacity-0 = " "
  ramp-capacity-1 = " "
  ramp-capacity-2 = " "
  ramp-capacity-3 = " "
  ramp-capacity-4 = " "
  format-discharging = "<ramp-capacity> <label-discharging> "
  format-discharging-underline = ${colors.bat_discharging}

  format-full-prefix = " "
  format-full-underline = ${colors.bat_full}







[module/powermenu]
  type = custom/menu

  expand-right = true

  format-spacing = 1

  label-open = Power
  label-open-foreground = ${colors.danger}
  label-close = cancel
  label-close-foreground = ${colors.danger}
  label-separator = |
  label-separator-foreground = ${colors.foreground-alt}

  menu-0-0 = reboot
  menu-0-0-exec = menu-open-1
  menu-0-1 = power off
  menu-0-1-exec = menu-open-2

  menu-1-0 = cancel
  menu-1-0-exec = menu-open-0
  menu-1-1 = reboot
  menu-1-1-exec = sudo reboot

  menu-2-0 = power off
  menu-2-0-exec = sudo poweroff
  menu-2-1 = cancel
  menu-2-1-exec = menu-open-0



