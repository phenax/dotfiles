
[global/wm]
  margin-top = 0
  margin-bottom = 0

[settings]
  screenchange-reload = true
  pseudo-transparency = true


[colors]
  background = #000f1215
  background-alt = ${xrdb:background:#0f1215}

  foreground = #ffffff
  foreground-alt = ${xrdb:foreground:#eeeeee}
  foreground-faded = #888888

  blue = ${xrdb:color4}
  green = ${xrdb:color2}
  red = ${xrdb:color9}
  yellow = ${xrdb:color11}
  violet = ${xrdb:color13}

  highlight = ${xrdb:accent}
  danger = ${colors.red}
  success = ${colors.green}
  warning = ${colors.yellow}

  volume = ${colors.blue}
  brightness = ${colors.yellow}
  music = ${colors.highlight}
  date = ${colors.red}
  bat_full = ${colors.green}
  bat_charging = ${colors.blue}
  bat_discharging = ${colors.yellow}


[bar/primary]
  modules-left = bspwm
  modules-center =
  modules-right = volume brightness music date battery

  ;monitor = ${env:MONITOR:HDMI-1}
  width = 100%
  height = 23
  offset-x = 0%
  offset-y = 0%
  radius = 0.0
  fixed-center = false
  bottom = true

  background = ${colors.background}
  foreground = ${colors.foreground}

  line-size = 1

  border-size = 0
  padding-left = 0
  padding-right = 2
  module-margin-left = 2
  module-margin-right = 1

  font-0 = Fira Code:size=10;1
  font-1 = Font Awesome 5 Free:size=8;0
  font-2 = Symbols Nerd Font:size=8;1

  tray-position = right
  tray-padding = 2

  cursor-click = pointer




[module/window_title]
  type = internal/xwindow
  format = "  <label>"
  format-foreground = ${colors.foreground-faded}


[module/updates]
  type = custom/script
  exec = ~/scripts/dzen2bar/menuitems.sh aur_updates
  interval = 600
  ; format-underline = ${colors.brightness}
  format-foreground = ${colors.foreground}


[module/bspwm]
  type = internal/bspwm

  pin-workspaces = true
  inline-mode = false
  enable-click = true
  enable-scroll = false
  reverse-scroll = false
  fuzzy-match = true

  label-empty =
  label-dimmed = " %name% "
  label-occupied = " %name% "
  label-focused = " %name% "
  label-urgent = " %name% "

  label-focused-background = ${colors.highlight}
  label-urgent-underline = ${colors.danger}



[module/brightness]
  type = custom/script
  interval = 0.1
  exec = printf " %.0f%s" "$(xbacklight -get)" "%"
  click-left = xbacklight -set 0.01
  ; format-underline = ${colors.brightness}
  format-foreground = ${colors.foreground}



[module/volume]
  type = custom/script
  interval = 0.1
  exec = echo "$(~/scripts/dzen2bar/menuitems.sh volume_icon) $(~/scripts/dzen2bar/menuitems.sh volume)"
  ; click-left = ~/scripts/sound.sh mute
  ; format-underline = ${colors.volume}
  format-foreground = ${colors.foreground}



[module/music]
  type = custom/script
  interval = 0.1
  exec = echo "  $(~/scripts/dzen2bar/menuitems.sh spotify_song_icon) $(~/scripts/dzen2bar/menuitems.sh spotify_song) "
  ; click-left = ~/scripts/spotify.sh play_pause
  ; format-underline = ${colors.music}
  format-background = ${colors.music}
  format-foreground = ${colors.foreground}



[module/date]
  type = internal/date
  interval = 5

  date = "%a - %d %h, %Y"
  time = "%l:%M %p"

  format-prefix = " "
  format-prefix-foreground = ${colors.foreground}
  format = "<label>"
  ; format-underline = ${colors.date}
  format-foreground = ${colors.foreground}

  ; label = "%date% | %time%"
  label = "%time%"



[module/battery]
  type = internal/battery
  battery = BAT0
  adapter = AC
  full-at = 99

  animation-charging-0 = " "
  animation-charging-1 = " "
  animation-charging-2 = " "
  format-charging = "<animation-charging> <label-charging>"
  ; format-charging-underline = ${colors.bat_charging}
  animation-charging-framerate = 750


  ramp-capacity-0 = " "
  ramp-capacity-1 = " "
  ramp-capacity-2 = " "
  ramp-capacity-3 = " "
  ramp-capacity-4 = " "
  format-discharging = "<ramp-capacity> <label-discharging>"
  ; format-discharging-underline = ${colors.bat_discharging}

  format-full-prefix = " "
  ; format-full-underline = ${colors.bat_full}



