
# General {{{
  auto-reload yes
  max-items 50
#}}}


# unbind keys {{{
  unbind-key j
  unbind-key k
  unbind-key J
  unbind-key K
  unbind-key v
#}}}


# Movement keys {{{
  bind-key l open
  bind-key h quit
  bind-key j down
  bind-key k up
  bind-key j next articlelist
  bind-key k prev articlelist
  bind-key J next-feed articlelist
  bind-key K prev-feed articlelist
  bind-key G end
  bind-key g home
#}}}


# Actions {{{
  bind-key a toggle-article-read
  bind-key U show-urls
#}}}


# Browser macros {{{
  browser "setsid -f sensible-browser %u 2&>/dev/null"

  macro o open-in-browser
  macro v set browser "notify-send Loading; setsid -f mpv %u 2&> /dev/null"; open-in-browser ; set browser "setsid -f sensible-browser %u 2&>/dev/null"
  macro V set browser "notify-send Loading; setsid -f swallow mpv %u 2&> /dev/null"; open-in-browser ; set browser "setsid -f sensible-browser %u 2&>/dev/null"
#}}}


# Theming {{{
  color background         default   default
  color listnormal         default   default
  color listnormal_unread  default   default bold
  color listfocus          white     magenta
  color listfocus_unread   default   magenta bold
  color info               default   magenta
  color article            default   default

  highlight article "^(Title):.*$" magenta default
  highlight article "https?://[^ ]+" red default
  highlight article "\\[image\\ [0-9]+\\]" green default
#}}}

