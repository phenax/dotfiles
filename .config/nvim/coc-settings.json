{
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "rescript", "reason"],
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh"],
      "ignoredRootPaths": []
    },
    "ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".ccls", ".ccls-root", "compile_commands.json", ".git/", ".hg/"],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				}
			}
		},
    "haskell": {
      "command": "hie-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  },


  "importCost.typescriptExtensions": [
    "\\.tsx?$"
  ],
  "importCost.javascriptExtensions": [
    "\\.jsx?$"
  ],
  "codeLens.enable": true,
  "importCost.bundleSizeDecoration": "both",
  "importCost.showCalculatingDecoration": true,
  "importCost.debug": false,





  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.quitOnOpen": false,
  "explorer.keyMappings.global": {
    "s": false,
    "p": false,
    "d": false,
    "y": false,
    "g": false,
    "*": false,

    "<cr>": ["expandable?", "expand", "open"],
    "<left>": "collapse",
    "<right>": ["expandable?", "expand", "open"],
    "sh": "open:split",
    "sv": "open:vsplit",
		".": "toggleHidden",
		"R": "refresh",

    "<space>": "toggleSelection",
    "gp": "preview:labeling",

    "P": "gotoParent",
    "o": "open",

    "yp": "copyFilepath",
		"yn": "copyFilename",
		"yy": "copyFile",
		"pp": "pasteFile",

    "r": "rename",
    "dd": "delete",
    "dD": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "m": "actionMenu"
  },


  "snippets.userSnippetsDirectory": "~/.config/nvim/snippets"
}
