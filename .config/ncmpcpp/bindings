def_key "left"
  previous_column
def_key "left"
  master_screen

def_key "right"
  next_column
def_key "right"
  slave_screen

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "x"
  delete_playlist_items

def_key "P"
  show_playlist_editor

def_key "B"
  show_browser

def_key "ctrl-s"
  save_playlist

def_key "s"
  show_search_engine
def_key "S"
  show_search_engine

def_key "c"
  clear_main_playlist


def_key "l"
    show_lyrics

def_key "+"
    show_clock

