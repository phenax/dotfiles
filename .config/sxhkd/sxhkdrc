# Free keys
# f9 => XF86Tools
# f11 => XF86Favorites
# f12 => XF86Display

# Free modifiers
# Alt_R
# Hyper_L


### Application control {{{

# Terminal
super + Return
  sensible-terminal -d $(xcwd)

# Tabbed terminal
super + shift + Return
  ~/.bin/tst -d $(xcwd)

# Browser and private browser
super + c
  sensible-browser
super + shift + c
  sensible-private-browser

# Brave browser
super + b
  brave
super + shift + b
  brave --incognito

# File manager
super + shift + f
  ~/.bin/with_zsh 'sensible-terminal -d $(xcwd) -e lf'


# Spotify controls
super + m; {Left,Return,Right}
  ~/scripts/spotify.sh {prev,play_pause,next}

# Add magnet link to download from clipboard
super + shift + t
  ~/scripts/torrent.sh add_from_clipboard;

# Calculator (Node playground)
super + shift + colon
  sensible-terminal -e node;

# Offline wiki search
super + question
  ~/scripts/wiki.sh;

# }}}



### Menu {{{

# Run menu
super + d
  rofi -modi drun,run -show drun

# Custom menus
super+shift+p
  ~/.bin/with_zsh rofi-pass
super+shift+o
  ~/.bin/with_zsh "~/scripts/open-project.sh"
super+shift+i
  ~/.bin/with_zsh "~/scripts/bookmarks-menu/bookmarker.sh menu"
super+shift+g
  ~/.bin/with_zsh "~/scripts/bookmarks-menu/gh-projects.sh menu"
super+shift+e
  ~/scripts/fontawesome-menu/fa-menu.sh menu

# }}}



### System control {{{

# Close node
super + shift + q
  bspc node -c

# Kill node
ctrl + alt + Delete; q
  bspc node -k

# Close all nodes in current workspace
super + ctrl + Delete
  bspc node 'any.local' --close



# Refresh bspwm config
super + shift + r
  ~/.config/bspwm/bspwmrc

# Power button
XF86PowerOff
  ~/scripts/powercontrol.sh menu

# Shutdown/Reboot
super + Delete; {s,r}
  ~/scripts/powercontrol.sh {poweroff,reboot}

# Lock screen
ctrl + shift + l
  ~/scripts/powercontrol.sh lock



# Screenshot
Print
  scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Pictures/screenshots';
ctrl + Print
  ~/.bin/with_zsh "scrot -s 'part-%Y-%m-%d-%s_screenshot_\$wx\$h.jpg' -e 'mv \$f ~/Pictures/screenshots'";

# Audio control
XF86Audio{Raise,Lower}Volume
  ~/scripts/sound.sh volume {up,down}
XF86AudioMute
  ~/scripts/sound.sh mute

# Mic mute
XF86AudioMicMute
  ~/scripts/sound.sh mute-mic



# Brightness control
XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 10

# }}}



### Layout {{{

# alternate between the tiled and monocle layout
# TODO: Maybe move this to use bsp-layout?
super + f
  bspc desktop -l next

# Layout configuration (per desktop)
super + {t,w,r}
  bsp-layout set {tall,wide,tiled}

# Balance out layout
super + b
  bsp-layout once even

# }}}



### Move, Navigate and Resize {{{

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Page up/down to focus next
super + {Next,Prior}
  bspc node -f '{next,prev}.local'


# Resize node
super + alt + {Left,Down,Up,Right}
  ~/.config/bspwm/scripts/resize.sh {left,down,up,right} 30


# Next/Prev workspace
super + {minus,equal}
  bspc desktop {prev,next} -f

# focus the last node/desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '{1-9,10}'

# }}}



### Preselection {{{

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# }}}

