
### Application control {{{

# Terminal
super + Return
  $TERMINAL -d $(xcwd)

# Browser
super + c
  browser

# Spotify controls
super + m; {Left,Return,Right}
  ~/scripts/spotify.sh {prev,play_pause,next}

# }}}



### Menu {{{

# Run menu
super + d
  rofi -modi drun,window,run -show drun

# Custom menus
super+shift+p
  rofi-pass
super+shift+o
  with_zsh "~/scripts/open-project.sh"
super+shift+i
  with_zsh "~/scripts/bookmarks-menu/bookmarker.sh menu"
super+shift+g
  with_zsh "~/scripts/bookmarks-menu/gh-projects.sh menu"
super+shift+e
  with_zsh "~/scripts/fontawesome-menu/fa-menu.sh menu"

# Window switcher
alt + Tab
  rofi -modi windowcd -show windowcd

# }}}



### System control {{{

# Close window
super + shift + q
  bspc node -c

super + ctrl + Delete
  bspc node 'any.local' --close

# Refresh bspwm config
super + shift + r
  ~/.config/bspwm/bspwmrc;

# Shutdown/Reboot
super + Delete; {s,r}
  ~/.config/i3/i3exit.sh {shutdown,reboot}

# Lock screen
ctrl + shift + l
  ~/scripts/lockscreen.sh

# Screenshot
Print
  scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Pictures/'
ctrl + Print
  gnome-screenshot -a

# Brightness control
XF86MonBrightness{Down,Up}
  ~/scripts/brightness.sh {dec,inc}

# Audio control
XF86Audio{Raise,Lower}Volume
  ~/scripts/sound.sh volume {up,down}
XF86AudioMute
  ~/scripts/sound.sh mute

# Mic mute
XF86AudioMicMute
  amixer set Capture toggle

# }}}



### Layout {{{

# alternate between the tiled and monocle layout
super + f
  bspc desktop -l next

# Tall layout
super + {t,w}
  ~/.config/bspwm/layouts/{tall,wide}.sh

# Balance out layout
super + b
  bspc node '@/' -B

# }}}



### Move and Navigate {{{

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
  bspc node -{f,s} {west,south,north,east}

# Page up/down to focus next
super + {Next,Prior}
  bspc node -f '{next,prev}.local'

# focus the node for the given path jump
# super + {p,b,comma,period}
#   bspc node -f @{parent,brother,first,second}

# Next/Prev workspace
super + {minus,equal}
  bspc desktop {prev,next} -f

# focus the last node/desktop
super + {grave,Tab}
  bspc {node,desktop} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# move a floating window
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# }}}



### Preselection {{{

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# }}}



### Resize {{{

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {Left,Down,Up,Right}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# }}}

